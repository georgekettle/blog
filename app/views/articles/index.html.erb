
<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-6">
      <h1>Articles</h1>
      <% @articles.each do |article| %>
        <%= link_to article_path(article) do %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path article.photo.key, height: 1000, crop: :fill if article.photo.attached? %>')">
            <p><%= article.title %></p>
          </div>
        <% end %>
      <% end %>
      <%= link_to 'New Article', new_article_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>




